
<table class="tableWidth"><br />
	<h3>Next</h3>

	  <tr>
		<th width="5%">Done</th>
		<th width="6%"><%= image_tag("flag.jpg") %></th>
	    <th width="20%">Due Date</th>
	    <th width="40%">Subject</th>
		<th width="14%">Patron</th>
		<% if current_user.admin? %>
	      <th width="20%">Assigned To</th>
		<% end %>
	  </tr>	
	
<% @next.each do |t| %>
	<tr class="row">
		<td class="submittable"><%= check_box_tag 'completed', :class => 'submittable' %></td>
		<td><%= color_code(t.priority) %></td>
	  
	  <td><%= englishify(t.due_date) %></td>
	  <td><span class="show"><%= link_to (t.subject), t, :remote => true %></span></td>
	  <td><span class="show"><%= link_to find_patron(t.patron_id), @patron %></span></td>
	  <% if current_user.admin? %>				
	  	<td><%= personalize(t.assign_to) %></td>
	  <% end %>
	</tr>	
<% end %>
