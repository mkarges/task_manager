<h1>Listing patrons</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patrons.each do |patron| %>
  <tr>
    <td><%= patron.first_name %></td>
    <td><%= patron.last_name %></td>
    <td><%= patron.email %></td>
    <td><%= patron.street %></td>
    <td><%= patron.city %></td>
    <td><%= patron.state %></td>
    <td><%= patron.zip %></td>
    <td><%= patron.phone %></td>
    <td><%= link_to 'Show', patron %></td>
    <td><%= link_to 'Edit', edit_patron_path(patron) %></td>
    <td><%= link_to 'Destroy', patron, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

