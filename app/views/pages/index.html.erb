<div id="home">
	<div class="left"><%= link_to "Task Home", tasks_path %></div>
	<div class="right"><%= link_to image_tag('add_sm.jpg', :border => 0), new_task_path, :remote => true %>&nbsp;<span class="add">Add</span></div>
	<br /><br /><br />
	<table class="tableWidth">
		
		<tr>
		   <th width="5%">Done</th>
		   <th width="6%"><%= sortable "priority", image_tag("flag.jpg") %></th>
		   <th width="20%"><%= sortable "due_date", "Due Date" %></th>
		   <th width="40%"><%= sortable "subject" %></th>
		   <th width="14%"><%= sortable "patron_id", "Patron" %></th>
		   <% if current_user.admin? %>
		     <th width="20%"><%= sortable "assign_to", "Assigned To" %></th>
		   <% end %>
		</tr>
	
		<%= render :partial => 'shared/filtered' %>
	
	</table>
</div>